<h1>Articles</h1>
<br>

<%= search_form_for @q do |f| %>

  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.label :body_cont %>
  <%= f.search_field :body_cont %>

  <%= f.submit %>
<% end %>

<br>
<ul>
  <th><%= sort_link(@q, :title, 'Articles Sort',default_order: :asc)%></th> <br>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "==>> Add New Article", new_article_path %>
